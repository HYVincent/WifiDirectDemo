<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/shape_background_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vincent.mylibrary.more_language.AppTextView
            android:layout_marginTop="@dimen/size_25"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_hint_msg_content"
            android:textColor="@color/color_black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:gravity="center"
                android:id="@+id/dialog_hint_msg_cancel"
                android:layout_weight="1"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:id="@+id/dialog_hint_msg_ok"
                android:layout_weight="1"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>