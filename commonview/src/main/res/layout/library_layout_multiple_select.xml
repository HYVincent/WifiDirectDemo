<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <LinearLayout
            android:id="@+id/dialog_list_buttom_ll_left"
            android:layout_width="wrap_content"
            android:minWidth="44dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dialog_list_buttom_tv_left"
                android:text="取消"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_blue_07aef5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:id="@+id/dialog_list_buttom_tv_center"
            android:textSize="15sp"
            android:textColor="@color/color_black_333333"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/dialog_list_buttom_ll_right"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="44dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_list_buttom_tv_right"
                android:text="确定"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                android:textColor="@color/color_blue_07aef5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/multiple_select_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>